@model SistemaGestionRENI.NewIndicadorViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        @*<div class="row">
                <h2>Nueva Dependencia</h2>
            </div>*@
        <div class="row mb-3">
            <div class="col-md-8 m-auto">
                <div class="card">

                    @using (Html.BeginForm("Save", "Indicador", null, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="card-header">
                            Nuevo Indicador
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Indicador.Nombre)
                                @Html.TextBoxFor(m => m.Indicador.Nombre, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Indicador.UnidadMedidaId)
                                @Html.DropDownListFor(m => m.Indicador.UnidadMedidaId, new SelectList(Model.UnidadesMedida, "Id", "Nombre"), "Seleccione Unidad", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Indicador.Valor)
                                @Html.TextBoxFor(m => m.Indicador.Valor, new { @class = "form-control", @placeholder = "0.00" })
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

