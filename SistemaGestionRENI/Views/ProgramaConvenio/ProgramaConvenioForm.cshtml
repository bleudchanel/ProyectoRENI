@model ProgramaConvenioViewModel
@{
    ViewBag.Title = "ProgramaConvenio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section>
    <div class="container">
        @*<div class="row">
                <h2>Nueva Dependencia</h2>
            </div>*@
        <div class="row mb-3">
            <div class="col-md-8 m-auto">
                <div class="card">

                    @using (Html.BeginForm("Save", "ProgramaConvenio", null, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="card-header">
                            Nueva Movilidad
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ProgramaConvenio.Nombres)
                                @Html.TextBoxFor(m => m.ProgramaConvenio.Nombres, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ProgramaConvenio.Nombres)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ProgramaConvenio.DocumentoIdentidad)
                                @Html.TextBoxFor(m => m.ProgramaConvenio.DocumentoIdentidad, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ProgramaConvenio.DocumentoIdentidad)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ProgramaConvenio.TipoProgramaId)
                                @Html.DropDownListFor(m => m.ProgramaConvenio.TipoProgramaId, new SelectList(Model.TiposPrograma, "Id", "Nombre"), "Seleccione Tipo de Programa", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ProgramaConvenio.TipoProgramaId)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ProgramaConvenio.InstitucionId)
                                @Html.DropDownListFor(m => m.ProgramaConvenio.InstitucionId, new SelectList(Model.Instituciones, "Id", "Nombre"), "Seleccione Institución de Origen", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ProgramaConvenio.InstitucionId)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ProgramaConvenio.DependenciaId)
                                @Html.DropDownListFor(m => m.ProgramaConvenio.DependenciaId, new SelectList(Model.Dependencias, "Id", "Nombre"), "Seleccione Dependencias Destino", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ProgramaConvenio.DependenciaId)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ProgramaConvenio.ProgramaMovEst)
                                @Html.TextBoxFor(m => m.ProgramaConvenio.ProgramaMovEst, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ProgramaConvenio.ProgramaMovEst)
                            </div>
                        </div>
                        <div class="card-footer">
                            @Html.HiddenFor(m => m.ConvenioId)
                            @Html.HiddenFor(m => m.ProgramaConvenio.Id)
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

