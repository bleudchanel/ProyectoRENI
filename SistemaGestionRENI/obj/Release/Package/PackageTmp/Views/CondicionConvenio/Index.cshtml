@model SistemaGestionRENI.ListCodicionConvenioViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <container>
        <div class="row mt-2">
            <h2>Condiciones de Convenio</h2>
        </div>
        <div class="row my-3">
            <a href="@Url.Action("New","CondicionConvenio", null)" class="btn btn-info">Nueva Condición de Convenio</a>
        </div>
        <div class="row">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Acción</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var dependencia in Model.CondicionesConvenio)
                {
                    <tr>
                        <th scope="row">@dependencia.Id</th>
                        <td>@dependencia.Nombre</td>
                        <td>
                            <a class="btn btn-danger" href="@Url.Action("Delete","CondicionConvenio", new {Id = @dependencia.Id})">Eliminar</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </container>
</section>
