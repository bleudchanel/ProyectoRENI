@model SistemaGestionRENI.Models.UnidadMedida
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-8 m-auto">
                <div class="card">

                    @using (Html.BeginForm("Save", "UnidadMedida", null, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="card-header">
                            Nueva Unidad de Medida
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Nombre)
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Descripcion)
                                @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
                            </div>
                            @*<div class="form-group">
            @Html.LabelFor(m => m.Valor)
            @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", @placeholder = "0.00" })
        </div>*@
                        </div>
                        <div class="card-footer">
                            @Html.HiddenFor(m => m.Id)
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


